{% layout "layout.liquid" %}
{% block content %}


    <h2 class="display-6">All Golf Courses</h2>
    <div class="row">
    {% for course in courses %}

        <div class="card m-3" style="width: 18rem;">
            <img src="{{ course.image }}" class="card-img-top" alt="{{ course.name }}">
            <div class="card-body">
            <h5 class="card-title">{{ course.name }}</h5>
            <p class="card-text"> Location: {{ course.location }}</p>
            <a href="/courses/{{ course.id }}" class="btn btn-light">
            View {{ course.name }}
            </a>
        </div>

</div>
{% endfor %}
</div>

{% endblock %}